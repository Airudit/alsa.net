<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <LangVersion>latest</LangVersion>
    <Authors>Jörn Roddelkopf</Authors>
    <Description>Dotnet Wrapper for ALSA on Unix devices. Supports Audio Playback and Recording through streams. Requires libasound2-dev to be installed on target System.</Description>
    <Company>Airudit</Company>
    <RepositoryUrl>https://github.com/mangel9742/alsa.net</RepositoryUrl>
    <PackageTags>alsa sound unix recording playback stream advanced linux sound architecture</PackageTags>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <Version>1.0.8</Version>
  </PropertyGroup>

</Project>
